#!/bin/bash

# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
  echo "Error: The CFILE variable is not set."
  exit 1
fi

# Extract the file name without extension
BASENAME=$(basename "$CFILE" .c)

# Compile the C file to an object file without linking
gcc -c "$CFILE" -o "${BASENAME}.o"

# Check if the compilation was successful
if [ $? -eq 0 ]; then
  echo "Compilation successful. Object file: ${BASENAME}.o"
else
  echo "Compilation failed."
fi

